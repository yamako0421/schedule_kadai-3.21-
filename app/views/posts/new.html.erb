<h3>予定の新規追加</h3>

<%= render "shared/error", obj: @post %>

<%= form_with model: @post, local: true do |f| %>

  <table>
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_datetime ,"開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_datetime ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :allday ,"終日の場合はチェックを入れます" %></th>
      <td><%= f.check_box :is_all_day %></td>
    </tr>

    <tr>
    <th><%= f.label :memo ,"スケジュールメモ" %></th>
    <td><%= f.text_area :memo,  class: 'form-control',size: "40x10"%></td>
  </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "保存"%></li>
      <li><%= link_to "キャンセル", :posts %></li>
    </ul>
  </div>
<% end %>

