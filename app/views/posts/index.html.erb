<h3>予定一覧</h3>

<% if flash[:notice] %>
  <p class="notice"><%= flash[:notice] %></p>
<% end %>

<p class =touroku ><%= link_to "新規追加", :new_post %></p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date.strftime('%Y/%m/%d')  %></td>
        <td><%= post.end_date.strftime('%Y/%m/%d')  %></td>        
        <td><%= post.is_all_day ? '◯' : ''   %></td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "詳細", post %></td>
        <td><%= link_to "編集", [:edit, post] %></td>
        <td><%= link_to "削除",  post, method: :delete, data: { confirm: "予定を削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>予定の合計数: <%= @total_count %></p>
<p>本日の日付: <%= @today.strftime("%Y/%m/%d") %></p>


